<h1>Conquistas Cadastradas</h1>

<a href="/conquistas/novo">Cadastrar nova conquista</a>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Título</th>
    <th>Descrição</th>
    <th>ID do Jogo</th>
  </tr>
  {{#each conquistas}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.titulo}}</td>
      <td>{{this.descricao}}</td>
      <td>{{this.jogo_id}}</td>
      <td>
        <a href="/conquistas/{{this.id}}/update">Atualizar</a>
        <form action="/conquistas/{{this.id}}/delete" method="post">
          <input type="submit" value="Excluir" />
        </form>
      </td>
    </tr>
  {{/each}}
</table>
